
<div class="container">
  <div>
    <h1>Edit Restaurant</h1>
  </div>
  <div>
    <%= simple_form_for(@restaurant) do |f| %>
      <div class="form-inputs">
      <%= f.input :name %>
      <%= f.input :address %>
      <%= f.input :phone_number %>
      <%= f.input :category %>
      </div>
      <div class="form-actions">
        <%= f.button :submit, class: 'btn btn-secondary' %>
      </div>
    <% end %>
  </div>
</div>
